<!-- ACCOMM 02 -->

<section id="accomm" class="accomm-02">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h3>Where to stay?</h3>
      </div>
      <div class="col-md-6 col-sm-6 col-md-offset-3">
        <div class="box">
          <a href="https://www.airbnb.com/s/seattle/homes" target="_new"><%= image_tag "airbnb.png" %></a>
