<!-- RSVP 02 -->

<section id="rsvp" class="rsvp-02">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h3>Say you'll come</h3>
        <p>Please let us know if you will come,
          <br>I hope you enjoy our wedding party.</p>
      </div>
      <div class="col-md-12 text-center">
         <%= form_tag('/rsvp', class: "form-inline") do |f| %>
          <div class="alert alert-danger" style="display:none;"> Please enter your name!</div>
          <div class="alert alert-success" style="display:none;"> Thanks for your RSVP!</div>
          <div class="form-group">
            <input type="text" class="form-control" id="name" name="name" placeholder="Your Name / Names">
            <input type="text" class="form-control" id="email" name="email" placeholder="Your Email">
          </div>
          <button type="submit" class="btn btn-default submit">RSVP <i class="ion-ios-arrow-right"></i></button>
         <% end %>
      </div>
    </div>
  </div>
</section>

